# Conky settings #
background yes
update_interval 0.1
double_buffer yes
no_buffers yes
imlib_cache_size 10

# Window specifications #
gap_x -200
gap_y 0
minimum_size 100 20
maximum_width 500
own_window yes
own_window_type normal  # other options are: override/dock/desktop/panel
own_window_transparent no
own_window_hints undecorate,sticky,skip_taskbar,skip_pager,below
own_window_colour 687FA6
border_inner_margin 0
border_outer_margin 0
#own_window_argb_visual yes
#own_window_argb_value 255

# Graphics settings #
draw_shades no
default_shade_color AAAAAA
draw_outline no
default_outline_color AAAAAA
draw_borders no
draw_graph_borders no

# Text settings #
use_xft yes
xftalpha 0
xftfont GLYPHICONS Halflings:size=9
text_buffer_size 256
override_utf8_locale yes
override_utf8_locale yes
imlib_cache_size 0

# Color scheme #
default_color CED3DC
color1 FFFFFF

alignment br

